#include <stdio.h>

int main()
{
    float a, b;

    /* Nhap hai so */
    printf("Nhap so thu nhat: ");
    scanf("%f", &a);

    printf("Nhap so thu hai: ");
    scanf("%f", &b);

    /* Tinh toan */
    printf("\nTong = %.2f", a + b);
    printf("\nTich = %.2f", a * b);

    /* Tinh thuong (kiem tra chia cho 0) */
    if (b != 0)
        printf("\nThuong = %.2f", a / b);
    else
        printf("\nKhong the tinh thuong (so thu hai bang 0)");

    return 0;
}
