#include <stdio.h>   // Thu vien vao ra chuan

int main()           // Ham chinh
{
    float diem[30][10];   // Mang luu diem (toi da 30 HS, 10 bai)
    int m, n;             // m: so hoc sinh, n: so bai thuc hanh
    int i, j;             // Bien chay vong lap
    float tb;             // Bien luu diem trung binh

    printf("Nhap so hoc sinh: ");
    scanf("%d", &m);      // Nhap so hoc sinh

    printf("Nhap so bai thuc hanh: ");
    scanf("%d", &n);      // Nhap so bai thuc hanh

    // Nhap diem cho tung hoc sinh
    for(i = 0; i < m; i++)            // Duyet tung hoc sinh
    {
        for(j = 0; j < n; j++)        // Duyet tung bai thuc hanh
        {
            printf("Diem HS %d - Bai %d: ", i + 1, j + 1);
            scanf("%f", &diem[i][j]); // Nhap diem
        }
    }

    printf("\nBang diem ban dau:\n");
    // In bang diem ban dau
    for(i = 0; i < m; i++)
    {
        for(j = 0; j < n; j++)
        {
            printf("%6.1f", diem[i][j]);   // In 1 chu so thap phan
        }
        printf("\n");
    }

    printf("\nDiem trung binh tung hoc sinh:\n");
    // Tinh diem trung binh tung hoc sinh
    for(i = 0; i < m; i++)
    {
        tb = 0;                        // Gan lai tong bang 0
        for(j = 0; j < n; j++)
        {
            tb += diem[i][j];          // Cong don diem
        }
        tb = tb / n;                   // Tinh trung binh
        printf("HS %d: %.2f\n", i + 1, tb);
    }

    // Chuan hoa diem
    for(i = 0; i < m; i++)
    {
        for(j = 0; j < n; j++)
        {
            if(diem[i][j] < 5)         // Neu diem < 5
            {
                diem[i][j] = 5;        // Gan lai bang 5
            }
            else if(diem[i][j] > 10)   // Neu diem > 10
            {
                diem[i][j] = 10;       // Gan lai bang 10
            }
        }
    }

    printf("\nBang diem sau khi chuan hoa:\n");
    // In bang diem sau chuan hoa
    for(i = 0; i < m; i++)
    {
        for(j = 0; j < n; j++)
        {
            printf("%6.1f", diem[i][j]);
        }
        printf("\n");
    }

    return 0;   // Ket thuc chuong trinh
}
